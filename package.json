{
  "name": "embroidery-erp",
  "version": "1.0.0",
  "description": "Production-grade ERP system for embroidery factory operations",
  "main": "dist/server/server.js",
  "scripts": {
    "postinstall": "cd client && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cross-env TS_NODE_TRANSPILE_ONLY=true nodemon --exec ts-node --project tsconfig.server.json src/server/server.ts",
    "server:simple": "nodemon src/server/simple-server.js",
    "client:dev": "cd client && npm start",
    "build": "npm run client:build",
    "server:build": "tsc -p tsconfig.server.json",
    "client:build": "cd client && npm run build",
    "start": "node dist/server/server.js",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "pg": "^8.11.3",
    "recharts": "^3.6.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/jspdf": "^1.3.3",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/pdfkit": "^0.13.3"
  }
}